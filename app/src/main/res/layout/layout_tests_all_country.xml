<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/recycle_view_layout_style"
    android:layout_margin="15dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:backgroundTint="#00FFFFFF"
            app:cardCornerRadius="80dp">
            <ImageView
                android:id="@+id/country_flag_image"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_marginRight="20dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asdasdas adadadasd"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textAllCaps="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Population: "
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_total_population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdadasdd"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Test: "
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_test_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdadasdd"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>